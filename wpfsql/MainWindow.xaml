<Window x:Class="nesneproje.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nesneproje"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Width="650" Height="550" Background="Yellow"> 
              <Label Content="Giriş yap" FontSize="35" HorizontalAlignment="Center"/>
              <Label Content="Kullanıcı Adı:" FontSize="20" Margin="130,255,0,0"/>
              <Label Content="Şifre:" FontSize="20" Margin="170,285,0,0"/>
<TextBox Height="25" Width="150" HorizontalAlignment="Center" Name="kadi" />
<PasswordBox Height="25" Width="150" HorizontalAlignment="Center" Name="sifre" Margin="0,75,0,0"  ToolTip="Password" PasswordChar="*" />
<Button Name="girisyap" Content="Giriş yap" Height="50" HorizontalAlignment="Center"  Width="50" Margin="-50,155,0,0" Click="girisdenemesi" />
<Button Name="kayitol" Content="Kayıt Ol" Height="50" HorizontalAlignment="Center"  Width="50" Margin="60,155,0,0" Click="kaydolagec" />

    </Grid>
</Window>
